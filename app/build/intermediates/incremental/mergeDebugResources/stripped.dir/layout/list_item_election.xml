<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    
                 
                           
                                                                                       
                 
                                
                                                                                                 
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="layout/list_item_election_0"                 
        android:layout_marginBottom="@dimen/small_margin"  xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/election_name"
            style="@style/item_title_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tag="binding_1"        
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Election name" />

        <TextView
            android:id="@+id/election_date"
            style="@style/item_value_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:tag="binding_2"           
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/election_name"
            tools:text="election_date" />


    </androidx.constraintlayout.widget.ConstraintLayout>
         